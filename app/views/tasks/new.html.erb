<div class="container mt-5">

  <h1 class="mb-4">Créer une nouvelle tâche</h1>


  <%= form_with model: @task, local: true do |f| %>

    <div class="mb-3">
      <%= f.label :title, "Titre", class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Entrez le titre de la tâche" %>
    </div>


    <div class="mb-3">
      <%= f.label :details, "Détails", class: "form-label" %>
      <%= f.text_area :details, class: "form-control", rows: 3, placeholder: "Entrez une description pour la tâche" %>
    </div>


    <div class="mb-3 form-check">
      <%= f.check_box :completed, class: "form-check-input", id: "completedCheck" %>
      <%= f.label :completed, "Terminée ?", class: "form-check-label", for: "completedCheck" %>
    </div>


    <div>
      <%= f.submit "Créer", class: "btn btn-primary" %>
      <%= link_to 'Retour à la liste', tasks_path, class: "btn btn-secondary ms-2" %>
    </div>
  <% end %>
</div>
