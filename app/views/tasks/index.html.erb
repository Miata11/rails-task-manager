<h1>Liste des tâches</h1>

<ul>
<% @tasks.each do |task| %>
<li>
  <%= link_to task.title, task_path(task) %>
  <%= task.details %>
  Statut : <%= task.completed ? 'terminée' : 'en cours' %>
  <%= link_to 'Modifier', edit_task_path(task) %>
  <%= link_to "Supprimer", delete_task_path(task), data: { turbo_method: :delete, turbo_confirm: 'Êtes-vous sûr de vouloir supprimer cette tâche ?' }  %>
</li>
<% end %>
</ul>

<p><%= link_to 'Créer une tache', tasks_new_path %></p>
